<div class="base-container">

  <h1 class="h1">MotoTokyoへようこそ!</h1>

  <div class="base-m mt-8 text-primary-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div>
        <%= f.label :id, 'ユーザーID (英数字6文字以上)', class: 'font-semibold' %><br>
        <%= f.text_field :id, autofocus: true, autocomplete: "username",
            class:'w-48 h-6 bg-primary border-b' %>
        <%= render partial: 'shared/error_messages', locals: { object: resource, attribute: :id } %>
      </div>
      <div class="mt-3">
        <%= f.label :email, 'メールアドレス', class: 'font-semibold' %><br>
        <%= f.email_field :email, autocomplete: "email",
            class: 'w-48 h-6 bg-primary border-b' %>
        <%= render partial: 'shared/error_messages', locals: { object: resource, attribute: :email } %>
      </div>
      <div class="mt-3">
        <%= f.label :password, 'パスワード', class: 'font-semibold' %>
        <% if @minimum_password_length %>
        <span class="font-semibold"><%= "(英数字#{@minimum_password_length}文字以上)" %></span>
        <% end %><br>
        <%= f.password_field :password, autocomplete: "new-password",
            class: 'w-48 h-6 bg-primary border-b' %>
        <%= render partial: 'shared/error_messages', locals: { object: resource, attribute: :password } %>
      </div>
      <div class="mt-3">
        <%= f.label :password_confirmation, '確認用パスワード', class: 'font-semibold' %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: 'w-48 h-6 bg-primary border-b' %>
        <%= render partial: 'shared/error_messages', locals: { object: resource, attribute: :password_confirmation } %>
      </div>
      <div>
        <div class="mt-5 list-disc list-inside">
          <li class="mb-1 ml-3 text-left"><%= link_to '利用規約', terms_path, class: 'font-bold underline', target: '_blank' %></li>
          <li class="mb-1 ml-3 text-left"><%= link_to 'プライバシーポリシー', privacy_policy_path, class: 'font-bold underline', target: '_blank' %></li>
          <div class="flex justify-end">
            <label for="check" class="mr-1">同意する</label>
            <input id="check" type="checkbox" class="daisy-checkbox daisy-checkbox-secondary daisy-checkbox-sm checked:border mr-3">
          </div>
        </div>
        <%= f.submit "新規登録", id: 'submit', class: 'btn-secondary block' %>
      </div>
    <% end %>
  </div>

  <div class="base-m mt-8 text-primary-content">
    <div>
      <p>既にご登録済みの方は</p>
      <%= link_to 'ログイン', new_user_session_path, class: 'btn-secondary' %>
    </div>
    <div class="mt-3">
      <p>または</p>
      <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name),
          class: 'btn-secondary' %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'devise/registrations/new', 'data-turbo-track': 'reload', defer: true %>