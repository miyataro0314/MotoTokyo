<div class="base-container">

  <h1 class="h1">MotoTokyoへようこそ!</h1>

  <div class="base-m mt-8 text-primary-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div>
        <%= f.label :id, 'ユーザーID(英数字6文字以上)' %><br>
        <%= f.text_field :id, autofocus: true, autocomplete: "username",
            class:'w-48 h-6 bg-primary border-b' %>
        <%= render partial: 'shared/error_messages', locals: { object: resource, attribute: :id } %>
      </div>
      <div class="mt-3">
        <%= f.label :email, 'メールアドレス' %><br>
        <%= f.email_field :email, autocomplete: "email",
            class: 'w-48 h-6 bg-primary border-b' %>
        <%= render partial: 'shared/error_messages', locals: { object: resource, attribute: :email } %>
      </div>
      <div class="mt-3">
        <%= f.label :password, 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(英数字<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br>
        <%= f.password_field :password, autocomplete: "new-password",
            class: 'w-48 h-6 bg-primary border-b' %>
        <%= render partial: 'shared/error_messages', locals: { object: resource, attribute: :password } %>
      </div>
      <div class="mt-3">
        <%= f.label :password_confirmation, '確認用パスワード' %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: 'w-48 h-6 bg-primary border-b' %>
        <%= render partial: 'shared/error_messages', locals: { object: resource, attribute: :password_confirmation } %>
      </div>
      <div>
        <%= f.submit "新規登録", class: 'btn-secondary' %>
      </div>
    <% end %>
  </div>

  <div class="base-m mt-8 text-primary-content">
    <div>
      <p>既にご登録済みの方は</p>
      <%= link_to 'ログイン', new_user_session_path, class: 'btn-secondary' %>
    </div>
    <div class="mt-3">
      <p>または</p>
      <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name),
          class: 'btn-secondary' %>
    </div>
  </div>
</div>
