<div class="base-container mb-24">

  <h1 class="h1">おかえりなさい！</h1>
  
  <div class="base-m mt-8 text-primary-content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email, 'メールアドレス' %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: 'w-48 h-6 bg-primary border-b' %>
      </div>
      <div class="mt-3">
        <%= f.label :password, 'パスワード' %><br>
        <%= f.password_field :password, autocomplete: "current-password",
            class: 'w-48 bg-primary border-b' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'ログインを保持する' %>
        </div>
      <% end %>
      <div>
        <%= f.submit "ログイン", class: 'btn-secondary' %>
      </div>
    <% end %>
  </div>

  <div class="base-m mt-8 text-primary-content">
    <div>
      <p>
        会員登録がお済みでない方は
      </p>
      <%= link_to '新規会員登録', new_user_registration_path,
          class: 'btn-secondary' %>
    </div>
    <div class="mt-3">
      <p>
        パスワードをお忘れの方は
      </p>
      <%= link_to "パスワードリセット", new_confirmation_path(resource_name), class: 'btn-secondary' %>
    </div>
  </div>
</div>

