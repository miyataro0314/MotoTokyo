<%= turbo_frame_tag 'modal' %>

<%= turbo_frame_tag 'contents' do %>

  <div class="base-container">
    <div class="base-l mt-3">
      <div class="pane-a">
        <%= link_to '検索ワード', search_spots_modal_searches_path,
            data: { turbo_frame: 'modal' }%>
      </div>
    </div>

    <div class="base-l mt-3 h-full">
      <% unless @spots.any? %>
        <div class="pane-a flex flex-col my-2 text-sm">
          該当するスポットがありませんでした
        </div>
      <% end %>
      <% @spots.each do |spot| %>
        <%= render partial: 'spots/spot_info', locals: { spot: spot, from: 'search' } %>
      <% end %>
      <%= paginate @spots %>
    </div>
  </div>

<% end %>