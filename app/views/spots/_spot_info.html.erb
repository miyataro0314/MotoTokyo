<%= link_to spot_path(spot, from: from, tab: 'bookmark'),
  data: { turbo: 'false' } do %>
  <div class="pane-20 flex flex-col my-2 drop-shadow-md text-left text-xs">
    <div class="flex border-b border-gray-300">
      <div class="w-7/12 max-h-12 whitespace-prewrap overflow-hidden font-semibold text-base">
        <%= spot.name %>
      </div>
      <div class="w-5/12 pb-0.5 text-right">
        <div>
          <%= spot.spot_detail.opening_hours %>
        </div>
        <div>
          <%= t_enum('spot', 'parking', spot.parking) %>
        </div>
      </div>
    </div>
    <div class="whitespace-prewrap overflow-hidden">
      <%= spot.spot_detail.address %>
    </div>
  </div>
<% end %>